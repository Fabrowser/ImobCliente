@model IEnumerable<Controle_Imob_Clientes.Models.Administrador>

    @{
    Layout = "~/Views/Shared/_LayoutImobClientes.cshtml";
    }


    @section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
    }


    @if (@TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
    <div class="card-block">
        <div class="card-header text-white bg-primary text-center h1">
            Administradores Registrados
        </div>
        <div class="card-body">
            <table id="tabela_administradores">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AdministradorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistroAdministrador)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nascimento)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.AdministradorID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistroAdministrador)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nascimento)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.AdministradorID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.AdministradorID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.AdministradorID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-success text-center">
            <a asp-action="Create" class="btn-success">
                Criar um novo administrador
            </a>
        </div>
    </div>


    @section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js">

        </script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_administradores').DataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
    }

